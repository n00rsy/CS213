<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<VBox xmlns:fx="http://javafx.com/fxml/1" alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/11.0.2"
      fx:controller="com.ordermanager.ordermanager.controller.MainMenuController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <Label fx:id="welcomeText" text="Order New Pizza"/>
    <HBox alignment="TOP_CENTER">
        <children>
            <Button mnemonicParsing="false" onAction="#handleOrderDeluxePizzaClick" text="Deluxe"/>
            <Button mnemonicParsing="false" onAction="#handleOrderHawaiianPizzaClick" text="Hawaiian"/>
            <Button mnemonicParsing="false" onAction="#handleOrderPepperoniPizzaClick" text="Pepperoni"/>
        </children>
    </HBox>
    <Button mnemonicParsing="false" onAction="#handleCurrentOrderClick" text="Current Order"/>
    <Button mnemonicParsing="false" text="Store Orders"/>
</VBox>
