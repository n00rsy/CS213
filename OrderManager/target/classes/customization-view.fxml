<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/11.0.2" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.ordermanager.ordermanager.controller.CustomizationViewController">
    <children>
        <Label fx:id="title" alignment="CENTER" text="Pizza Type" />
      <HBox>
         <children>
            <VBox>
               <children>
                  <ImageView fx:id="pizzaImageView" fitHeight="150.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true">
                     <VBox.margin>
                        <Insets right="30.0" />
                     </VBox.margin></ImageView>
                   <Text fx:id="priceText" text="Price:">
                     <font>
                        <Font size="24.0" />
                     </font></Text>
               </children>
            </VBox>
            <VBox minHeight="-Infinity">
               <children>
                  <Label text="Size:" />
                  <HBox>
                     <children>
                        <RadioButton mnemonicParsing="false" text="Small">
                           <toggleGroup>
                              <ToggleGroup fx:id="size" />
                           </toggleGroup>
                        </RadioButton>
                        <RadioButton mnemonicParsing="false" text="Medium" toggleGroup="$size" />
                        <RadioButton mnemonicParsing="false" text="Large" toggleGroup="$size" />
                     </children>
                     <padding>
                        <Insets bottom="20.0" />
                     </padding>
                  </HBox>
                  <Label text="Toppings:" />
                  <GridPane>
                    <columnConstraints>
                      <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                      <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                    </columnConstraints>
                    <rowConstraints>
                      <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                      <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                      <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                    </rowConstraints>
                     <children>
                        <CheckBox mnemonicParsing="false" text="Tomato" onAction="#toppingChanged" />
                        <CheckBox mnemonicParsing="false" text="Onions" GridPane.columnIndex="1" />
                        <CheckBox mnemonicParsing="false" text="Jalapenos" GridPane.rowIndex="1" />
                        <CheckBox mnemonicParsing="false" text="Spinach" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                        <CheckBox mnemonicParsing="false" text="Pineapple" GridPane.rowIndex="2" />
                        <CheckBox mnemonicParsing="false" text="Ham" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                        <CheckBox mnemonicParsing="false" text="Bell Peppers" GridPane.columnIndex="2" />
                        <CheckBox mnemonicParsing="false" text="Pepperoni" GridPane.columnIndex="2" GridPane.rowIndex="1" />
                        <CheckBox mnemonicParsing="false" text="Mushrooms" GridPane.columnIndex="2" GridPane.rowIndex="2" />
                        <CheckBox mnemonicParsing="false" text="Olives" GridPane.rowIndex="3" />
                        <CheckBox mnemonicParsing="false" text="Sausage" GridPane.columnIndex="1" GridPane.rowIndex="3" />
                        <CheckBox mnemonicParsing="false" text="Extra Cheese" GridPane.columnIndex="2" GridPane.rowIndex="3" />
                     </children>
                     <padding>
                        <Insets bottom="20.0" />
                     </padding>
                  </GridPane>
                  <Button alignment="CENTER" mnemonicParsing="false" text="Place Order" />
               </children></VBox>
         </children></HBox>
    </children>
</VBox>
