<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/11.0.2" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.cs213.tuitionmanagerfx.controller.AddStudentController">
    <Text>Add Student</Text>
    <Text>Student Type</Text>
    <HBox prefHeight="42.0" prefWidth="600.0">
        <RadioButton fx:id="resident" onAction="#handleStudentTypeChange" text="Resident">
         <toggleGroup>
            <ToggleGroup fx:id="studentType" />
         </toggleGroup></RadioButton>
        <RadioButton fx:id="nonresident" onAction="#handleStudentTypeChange" text="Non-Resident" toggleGroup="$studentType" />
        <RadioButton fx:id="international" onAction="#handleStudentTypeChange" text="International" toggleGroup="$studentType" />
        <RadioButton fx:id="tristate" onAction="#handleStudentTypeChange" text="Tri-State" toggleGroup="$studentType" />
    </HBox>
    <HBox>
        <Label>Name:</Label>
        <TextField fx:id="name" />
    </HBox>
    <HBox>
        <Label>Major:</Label>
        <RadioButton fx:id="CS" text="CS">
         <toggleGroup>
            <ToggleGroup fx:id="major" />
         </toggleGroup></RadioButton>
        <RadioButton fx:id="IT" text="IT" toggleGroup="$major" />
        <RadioButton fx:id="BA" text="BA" toggleGroup="$major" />
        <RadioButton fx:id="EE" text="EE" toggleGroup="$major" />
        <RadioButton fx:id="ME" text="ME" toggleGroup="$major" />

    </HBox>
    <HBox>
        <Label>Number of Credit Hours:</Label>
        <TextField fx:id="numCredits" />
    </HBox>
    <HBox fx:id="studyAbroadContainer" disable="true">

        <Label>Study Abroad:</Label>
        <RadioButton fx:id="studyAbroadTrue" text="True">
         <toggleGroup>
            <ToggleGroup fx:id="studyAbroad" />
         </toggleGroup></RadioButton>
        <RadioButton fx:id="studyAbroadFalse" text="False" toggleGroup="$studyAbroad" />

    </HBox>

    <HBox fx:id="locationContainer" disable="true">

        <Label>Location: </Label>
        <RadioButton fx:id="locationNY" text="NY">
            <toggleGroup>
                <ToggleGroup fx:id="locationGroup" />
            </toggleGroup></RadioButton>
        <RadioButton fx:id="locationCT" text="CT" toggleGroup="$locationGroup" />

    </HBox>

   <HBox prefHeight="100.0" prefWidth="200.0">
      <children>
         <Button mnemonicParsing="false" onAction="#handleBackButtonClick" text="Back" />
         <Button mnemonicParsing="false" onAction="#handleSubmitButtonClick" text="Submit" />
      </children>
   </HBox>

   <TextArea fx:id="output" prefHeight="200.0" prefWidth="200.0" />
</VBox>
